#version 330 core

// Input vertex data (attributes)
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aColor;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;
uniform mat4 anim;

// Output vertex data
out vec3 ourColor;

void main() {
	gl_Position = projection * view * model * anim * vec4(aPos, 1.0);
	ourColor = aColor;
}

